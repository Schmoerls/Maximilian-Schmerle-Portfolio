<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meal_result_ll"
    android:background="@color/pc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:background="@color/pc"
                android:id="@+id/meal_header"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="40dp"
                android:text="test"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/text1"
                android:shadowColor="@color/black"/>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/iv_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark_svgrepo_com"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:background="@color/scdark"
            android:id="@+id/meal_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/meal_header"
            android:textSize="25dp"
            android:text="test"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/text1"
            android:shadowColor="@color/black"/>
        <TextView
            android:background="@color/pclight"
            android:id="@+id/meal_instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            app:layout_constraintTop_toBottomOf="@id/meal_ingredients"
            android:textSize="25dp"
            android:text="test"
            android:gravity="center"

            android:scrollbars="vertical"
            android:textColor="@color/text1"
            android:shadowColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/meal_instruction"
            app:layout_constraintBottom_toBottomOf="@id/parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:background="@color/scdark"
                android:id="@+id/meal_scroller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="25dp"
                android:text="Swipe Left/Right Doubletap to like"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/text1"
                android:shadowColor="@color/black"/>
            <Button
                android:backgroundTint="@color/scdark"
                android:id="@+id/mark_button"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mark"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>






</LinearLayout>